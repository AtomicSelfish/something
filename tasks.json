{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "build",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-O2",
        "${fileDirname}\\${fileBasenameNoExtension}.cpp",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "run",
      "command": "start",
      "args": [
        "F:/code/runner.exe",
        "${fileDirname}/${fileBasenameNoExtension}.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label" : "buildnrun",
      "dependsOn" : [
        "build",
        "run",
      ],
      "group": {
        "kind" : "build",
        "isDefault": true,
      }
    },
    {
      "type": "cppbuild",
      "label": "C/C++: cpp.exe build active file",
      "command": "C:\\Program Files (x86)\\CodeBlocks\\MinGW\\bin\\cpp.exe",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "detail": "compiler: \"C:\\Program Files (x86)\\CodeBlocks\\MinGW\\bin\\cpp.exe\""
    }
  ]
}